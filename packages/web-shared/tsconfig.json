{
  "extends": ["@stats/tsconfig/base.json"],
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "module": "ES2022",
    "noEmit": false,
    "jsx": "preserve",
    "sourceMap": true,
    "noEmitOnError": false,
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "paths": {
      "@stats/shared-web/*": ["./src/*"],
      "@stats/api/*": ["../../apps/stats-api/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
